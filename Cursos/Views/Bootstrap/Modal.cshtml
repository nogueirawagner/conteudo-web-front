
<div class="container">
    <div class="page-header">
        Modal Window
    </div>

    <button type="button" class="btn btn-info"
            data-toggle="modal" data-target="#janela">
        Logar
    </button>
    <!-- Criar Janela-->
    <form class="modal" id="janela">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">

                <!--Cabeçalho-->
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                    <h4 class="modal-title">Efetuar Login</h4>
                </div>

                <!--Corpo-->
                <div class="modal-body">
                    <div class="form-group">
                        <input type="email" id="email" class="form-control" placeholder="Digite seu e-mail">
                    </div>

                    <div class="form-group">
                        <input type="password" id="senha" class="form-control" placeholder="Digite sua senha">
                    </div>
                </div>

                <!--Rodape-->
                <div class="modal-footer">

                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        Cancelar
                    </button>

                    <button type="submit" class="btn btn-primary">
                        Logar
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>